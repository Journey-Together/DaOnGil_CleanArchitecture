<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/margin_big2"
        android:background="@color/primary_disabled" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="@dimen/margin_big2"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="총"
            android:textSize="@dimen/font_big3" />

        <TextView
            android:id="@+id/total_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small2"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/search_view_main"
            android:textSize="@dimen/font_big3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="건"
            android:textSize="@dimen/font_big3" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/sort_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_latest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_small2"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/text_sort_recent"
                android:textColor="@color/select_area_text"
                android:textSize="@dimen/font_big3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_medium"
                android:text="|"
                android:textColor="@color/select_area_text"
                android:textSize="@dimen/font_big3" />

            <TextView
                android:id="@+id/btn_letter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_small2"
                android:layout_marginEnd="@dimen/margin_small2"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/text_sort_ganada"
                android:textColor="@color/select_area_text"
                android:textSize="@dimen/font_big3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_medium"
                android:text="|"
                android:textColor="@color/select_area_text"
                android:textSize="@dimen/font_big3" />

            <TextView
                android:id="@+id/btn_popularity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_small2"
                android:layout_marginEnd="@dimen/margin_big2"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/text_sort_popular"
                android:textColor="@color/select_area_text"
                android:textSize="@dimen/font_big3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>