<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_big3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small2"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_medium"
            android:text="지역 선택"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small2"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/area_select_layout"
            style="@style/area_auto_complete_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전국"
            android:textColorHint="@color/select_area_text">

            <AutoCompleteTextView
                android:id="@+id/selected_area"
                style="@style/area_auto_complete_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/detail_area_select_layout"
            style="@style/area_auto_complete_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전체"
            android:textColorHint="@color/select_area_text"
            android:visibility="gone">

            <AutoCompleteTextView
                android:id="@+id/detail_selected_area"
                style="@style/area_auto_complete_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/margin_big2"
        android:background="@color/primary_disabled" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_big2"
        android:paddingStart="20dp"
        android:paddingEnd="10dp">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총"
        android:textSize="@dimen/font_big3"
        android:fontFamily="@font/pretendard_medium" />

    <TextView
        android:id="@+id/total_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_big3"
        android:textColor="@color/search_view_main"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginStart="@dimen/margin_small2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="건"
        android:textSize="@dimen/font_big3" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/btn_latest"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/text_sort_recent"
        android:textColor="@color/select_area_text"
        android:textSize="@dimen/font_big3" />

    <TextView
        android:id="@+id/btn_letter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/text_sort_ganada"
        android:textSize="@dimen/font_big3"
        android:layout_marginStart="@dimen/margin_small2"
        android:textColor="@color/select_area_text"/>

    <TextView
        android:id="@+id/btn_popularity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginEnd="@dimen/margin_big2"
        android:layout_marginStart="@dimen/margin_small2"
        android:text="@string/text_sort_popular"
        android:textColor="@color/select_area_text"
        android:textSize="@dimen/font_big3" />
    </LinearLayout>
</LinearLayout>